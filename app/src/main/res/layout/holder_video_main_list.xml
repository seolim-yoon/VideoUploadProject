<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import
            type="android.view.View"/>
        <variable
            name="video"
            type="com.example.videouploadproject.repository.data.entity.Video"/>
        <variable
            name="viewmodel"
            type="com.example.videouploadproject.viewmodel.MainViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_vide_info_list"
        android:layout_margin="7dp">

        <ImageView
            android:id="@+id/iv_thumnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="10dp"
            app:imageUrl="@{video.uri}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@{video.title}"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/iv_thumnail"
            app:layout_constraintStart_toEndOf="@id/iv_thumnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_thumnail"/>

        <ImageView
            android:id="@+id/iv_delete_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="@{viewmodel.deleteMode ? View.VISIBLE : View.GONE}"
            android:background="@drawable/img_delete"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="@id/tv_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
